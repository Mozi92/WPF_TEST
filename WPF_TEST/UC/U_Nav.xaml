<UserControl x:Class="WPF_TEST.UC.U_Nav"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TEST.UC"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="170" BorderBrush="SkyBlue" BorderThickness="0,0,0,1" Mouse.MouseUp="UserControl_MouseUp">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="Foreground" Value="#CED0CF"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="Nav_Item">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="icon" Height="32"  Width="32" Grid.Row="0" Margin="0,16,0,0"  />
        <TextBlock x:Name="tb" Margin="0,0,0,16" Grid.Row="1" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Height="24"/>
    </Grid>
</UserControl>
